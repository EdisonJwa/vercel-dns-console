{
  "extends": [
    "sukka/typescript",
    "next/core-web-vitals",
  ],
  "plugins": [
    "baseui"
  ],
  "rules": {
    "baseui/deprecated-theme-api": "warn",
    "baseui/deprecated-component-api": "warn",
    "baseui/no-deep-imports": "warn"
  },
  "settings": {
    "node": {
      "resolvePaths": [
        "__dirname"
      ],
      "tryExtensions": [
        ".js",
        ".json",
        ".node",
        ".ts",
        ".d.ts",
        ".tsx"
      ]
    },
    "import/parsers": {
      "@typescript-eslint/parser": [
        ".ts",
        ".tsx"
      ]
    },
    "import/resolver": {
      "typescript": {
        "alwaysTryTypes": true
      }
    }
  }
}
